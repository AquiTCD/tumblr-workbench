:root
  font-size: $font-size-root
  +media-query(media-larger)
    font-size: $font-size-root-pc
html
  height: 100%
body
  background-color: $bg-color-base
  color: $font-color-base
  font-family: $font-family-base
  font-size: $font-size-base
  text-align: justify
  font-feature-settings: 'pkna'
  word-wrap: break-word
  letter-spacing: $letter-spacing-base
  -webkit-font-smoothing: subpixel-antialiased
  -moz-osx-font-smoothing: grayscale
  link-variation: $primary-color-shade false
  vertical-rhythm: true
  min-height: 100%
  display: flex
  flex-flow: column nowrap
img // for missing image
  height: auto
  position: relative
  text-align: center
  max-width: 100%
  &:after
    overflow: hidden
    border: 1px dashed $grey-base
    content: "\f1c5" " 画像[" attr(alt)
    font-size: 1rem
    font-family: FontAwesome
    color: $grey-shade
    absolute: top 0 left 0
    z-index: 2
    width: 100%
    height: 100%
    background-color: $grey-tint
button // reset
  background-color: transparent
  border: 0
  cursor: pointer
  outline: 0
  padding: 0
  appearance: none
  font-size: $font-size-base

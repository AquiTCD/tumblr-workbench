.m-postFooter
  rhythmical-margin: 0 0.125 0 0.125
  +media-query(media-medium)
    rhythmical-margin: 0 0.25 0 0.25
  .m-postFooter_postSource
    // border: 1px solid $black-base
    border-radius: 3px
    background: $grey-tint
    rhythmical-padding: 0.125 0.125 0.125 0.125
    margin-bottom: rhythmical-space(0.5)
    +media-query(media-medium)
      rhythmical-padding: 0.25 0.25 0.25 0.25
    .postSource_reblog
      .reblog_parentName
        // display: none
      .reblog_rootName
        // display: none
  .m-postFooter_notesSection
    .notesSection_count
      font-weight: bold
    .notesSection_list
      li
        border-bottom: 1px dashed $grey-base
      img.avatar
        margin-right: 0.25em
  .m-postFooter_socialBtns
    .socialBtns_items
      display: flex
      flex-flow: row nowrap
      justify-content: center
      align-items: center
      list-style: none
      margin-bottom: 0
      border: 1px solid $black-base
      border-radius: 3px
      background: $white-base
      height: 43px
      &.is-permalink
        fixed: bottom left
        width: 100%
        z-index: 100
        z-depth: 1
        margin: 0
        border: 0
        border-radius: 0
        +media-query(media-medium)
          position: inherit
          width: inherit
          z-index: inherit
          z-depth: 0
          margin: inherit
          border: 1px solid $black-base
          border-radius: 3px
        .socialBtns_item
          border-right: none
          +media-query(media-medium)
            border-right: 1px solid $black-base
      .socialBtns_item
        border-right: 1px solid $black-base
        align-self: stretch
        text-align: center
        flex-grow: 1
        padding-top: 8px
        padding-bottom: 8px
        &:last-child
          border-right: none
        amp-social-share
          display: block
          margin: auto
          // width:33px
          &[type=tumblr]
            color: $sc.Tumblr
            background: $white-base url( 'http://lib.solunita.net/images/tumblr.svg' )
          &[type=hateb]
            color: $sc.Hatena_Bookmark
            background: $white-base url( 'http://lib.solunita.net/images/hatenabookmark.svg' )
          &[type=twitter]
            color: $sc.Twitter
            background: $white-base url( 'http://lib.solunita.net/images/twitter.svg' )
          &[type=facebook]
            color: $sc.Facebook
            background: $white-base url( 'http://lib.solunita.net/images/facebook.svg' )
          &[type=line]
            color: $sc.Line
            background: $white-base url( 'http://lib.solunita.net/images/line.svg' )
          &[type=pocket]
            color: $sc.Pocket
            background: $white-base url( 'http://lib.solunita.net/images/pocket.svg' )

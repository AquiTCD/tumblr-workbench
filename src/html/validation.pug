extends /layouts/_base
//- ============================================================
block append variables
  //- Required
  - var pageTitle= "Validation"
  //- Optional
  - var pageDescription= ""
  - var pageLang= ""
  - var pageOgpImage= ""
  - var pageOgpType= ""
  //- Not modified
  - var pageUrl= "/validation.html"
//- ============================================================
block append css
  link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css")
  link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap-theme.min.css")
block append js
//- ============================================================
block content
  main.l-main.container.break-js
    .l-main_container
      .row
        .col
          label(for="") アカウントを作成
        .col
          input(type="text" placeholder="4文字以上8文字以内で入力してください" data-minlength="4" data-maxlength="8" required)
          ul
            li(data-error="required") 必須項目です
            li(data-error="minlength") 4文字以上で入力してください
            li(data-error="maxlength") 8文字以内で入力してください
      .row
        .col
          label(for="") パスワードを作成
        .col
          input(type="text" placeholder="4文字以上8文字以内で入力して下さい" data-minlength="4" data-maxlength="8" required)
          ul
            li(data-error="required") 必須項目です
            li(data-error="minlength") 4文字以上で入力してください
            li(data-error="maxlength") 8文字以内で入力してください

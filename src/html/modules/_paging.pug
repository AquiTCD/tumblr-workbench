.m-paging
  = t.b.__PermalinkPagination
  ul.m-paging_items.is-permalink
    = t.b.__NextPost
    li.m-paging_item: a.is-link.next(href=`${t.NextPost}`, rel='next')
      i.fa.fa-angle-double-left &nbsp;
      | ひとつ新しい記事
    = t.b.NextPost__
    = t.b.__PreviousPost
    li.m-paging_item: a.is-link(href=`${t.PreviousPost}`)
      |ひとつ古い記事&nbsp;
      i.fa.fa-angle-double-right
    = t.b.PreviousPost__
  = t.b.PermalinkPagination__
  = t.b.__Pagination
  ul.m-paging_items
    = t.b.__PreviousPage
    li.m-paging_item: a.is-link(href=`${t.PreviousPage}`)
      i.fa.fa-angle-double-left &nbsp;
      | 新しい記事
    = t.b.PreviousPage__
    != t.b.__JumpPagination_length5
    = t.b.__CurrentPage
    li.m-paging_item.is-current #{t.PageNumber}
    = t.b.CurrentPage__
    = t.b.__JumpPage
    li.m-paging_item: a.is-link.is-jump(href=`${t.URL}`) #{t.PageNumber}
    = t.b.JumpPage__
    = t.b.JumpPagination__
    = t.b.__NextPage
    li.m-paging_item: a.is-link.next(href=`${t.NextPage}`, rel='next')
      | 古い記事&nbsp;
      i.fa.fa-angle-double-right
    = t.b.NextPage__
  = t.b.Pagination__

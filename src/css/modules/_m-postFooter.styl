.m-postFooter
  .reblogedfrom
    .reblogedfrom_parentName
      display: none
    .reblogedfrom_rootName
      display: none
  .notecount
    .notecount_numbers
      display: none
  .socialBtns
    .socialBtns_items
      display: flex
      flex-flow: row nowrap
      justify-content: center
      align-items: center
      list-style: none
      margin-bottom: 0
      border: 1px solid $white-base
      border-radius: 3px
      background: $black-base
      rhythmical-margin: 0 0.125 0 0.125
      +media-query(media-medium)
        rhythmical-margin: 0 0.25 0 0.25
      &.is-permalink
        fixed: bottom left
        width: 100%
        z-index: 100
        z-depth: 1
        margin: 0
        background: $black-base
        border: 0
        border-radius: 0
        +media-query(media-medium)
          position: inherit
          width: inherit
          z-index: inherit
          z-depth: 0
          margin: inherit
          border-radius: 3px
          rhythmical-margin: 0 0.25 0 0.25
        .socialBtns_item
          border-right: none
          +media-query(media-medium)
            border-right: 1px solid $white-base
      .socialBtns_item
        border-right: 1px solid $white-base
        align-self: stretch
        text-align: center
        flex-grow: 1
        &:last-child
          border-right: none
        amp-social-share

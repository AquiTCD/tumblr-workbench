extends /layouts/_base
//- ============================================================
block append variables
//- ============================================================
block append css
block append js
//- ============================================================
block content
  main.l-main.autopagerize_page_element(role='main')
    .l-main_container
      = t.b.__TagPage
      h2.tagged Posts tagged "#{t.Tag}"
      = t.b.TagPage__
      = t.b.__Posts
      article.m-post(class=`${t.TagsAsClasses} is-${t.PostType}`)
        .m-postInfo
          .m-postInfo_tags
            = t.b.__HasTags
            i.fa.fa-tags &nbsp;
            = t.b.__Tags
            a(href=`${t.TagURL}` class='m-postInfo_tag') #{t.Tag}
            = t.b.HasTags__
          .m-postInfo_date
            = t.b.__Date
            i.fa.fa-clock-o &nbsp;
            a(href=`${t.Permalink}`)
              time #{t.Year}-#{t.MonthNumberWithZero}-#{t.DayOfMonthWithZero}
              | （#{t.TimeAgo}）
            = t.b.Date__
        include /blocks/_text
        include /blocks/_photo
        include /blocks/_photoset
        include /blocks/_quote
        include /blocks/_link
        include /blocks/_chat
        include /blocks/_video
        include /blocks/_audio
        include /blocks/_answer
        // Content Source
        = t.b.__ContentSource
        .post_source
          a(href=`${t.SourceURL}`)
            = t.lang_Source
            | :
            = t.b.__SourceLogo
            img(src=`${t.BlackLogoURL}`, width=`${t.LogoWidth}`, height=`${t.LogoHeight}`, alt=`${t.SourceTitle}`)
            = t.b.SourceLogo__
            = t.b.__NoSourceLogo
            = t.SourceTitle
            = t.b.NoSourceLogo__
        = t.b.ContentSource__
        // 記事フッタ
        footer.m-postFooter
          = t.b.__RebloggedFrom
          .reblogedfrom
            span.reblogedfrom_parentName
              a(href=`${t.ReblogParentURL}`)
                img.favicon(src=`${t.ReblogParentPortraitURL_16}`)
                = t.ReblogParentName
              | からリブログ
            span.reblogedfrom_rootName
              | 第一発信元:
              a(href=`${t.ReblogRootURL}`)
                img.favicon(src=`${t.ReblogRootPortraitURL_16}`)
                = t.ReblogRootName
          = t.b.RebloggedFrom__
          .notecount
            span.notecount_numbers
              a(href=`${t.Permalink}`) #{t.NoteCount} Notes
            = t.b.NoteCount__
          .socialBtns
            ul.socialBtns_items
              li.socialBtns_item.is-reblog !{t.ReblogButton}
              li.socialBtns_item.is-like !{t.LikeButton}
              = t.b.__IfEnableHatebButton
              li.socialBtns_item.is-hateb
                //- a.twitter-btn(href='https://twitter.com/share', data-lang='ja') ツイート
                //- script.
                //-   !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");
              = t.b.IfEnableHatebButton__
              = t.b.__IfEnableTweetButton
              li.socialBtns_item.is-twitter
                a.twitter-btn(href='https://twitter.com/share', data-lang='ja') ツイート
                script.
                  !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");
              = t.b.IfEnableTweetButton__
              = t.b.__IfEnableLikeButton
              li.socialBtns_item.is-fb
                .fb-btn(data-send='false', data-layout='button_count', data-width='100', data-show-faces='false')
              = t.b.IfEnableLikeButton__
              = t.b.__IfEnableLineButton
              li.socialBtns_item.is-line
                //- code
              = t.b.IfEnableLineButton__
              = t.b.__IfEnablePocketButton
              li.socialBtns_item.is-pocket
                //- code
              = t.b.IfEnablePocketButton__
              = t.b.__IfEnablePlus1Button
              li.socialBtns_item.is-gplus
                .g-plusone(data-size='medium')
                script(type='text/javascript').
                  window.___gcfg = {lang: 'ja'};
                  (function() {
                  var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
                  po.src = 'https://apis.google.com/js/plusone.js';
                  var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
                  })();
              = t.b.IfEnablePlus1Button__


          // 全articleにソーシャルボタン、parmalinkかつスマホなら下部固定
          //- = t.b.__Date
          //- .tumblr-controls
          //-   ul.like-and-reblog-buttons
          //-     li !{t.ReblogButton}
          //-     li !{t.LikeButton}
          //- = t.b.Date__
          // パーマリンクだけソーシャルボタン出す


          = t.b.__PermalinkPage
          ul.social-buttons

            li.social-button



          = t.b.PermalinkPage__
          = t.b.__PostNotes
          h3.notecount-header #{t.NoteCount} Notes
          .notecontainer {PostNotes}
          = t.b.PostNotes__
      = t.b.Posts__

  // パーマリンクのページング
  = t.b.__PermalinkPagination
  .pagenation.pagenation-permalink
    = t.b.__NextPost
    a.next(href=`${t.NextPost}`, rel='next') Newer Post
    = t.b.NextPost__
    = t.b.__PreviousPost
    a(href=`${t.PreviousPost}`) Older Post
    = t.b.PreviousPost__
  = t.b.PermalinkPagination__
  // ページごとのページング
  = t.b.__Pagination
  .pagenation.pagenation-index
    = t.b.__PreviousPage
    a(href=`${t.PreviousPage}`) Prev
    = t.b.PreviousPage__
    = t.b.__JumpPagination_length5
    = t.b.__CurrentPage
    span.current-page #{t.PageNumber}
    = t.b.CurrentPage__
    = t.b.__JumpPage
    a.jump-page(href=`${t.URL}`) #{t.PageNumber}
    = t.b.JumpPage__
    = t.b.JumpPagination__
    = t.b.__NextPage
    a.next(href=`${t.NextPage}`, rel='next') Next
    = t.b.NextPage__
  = t.b.Pagination__

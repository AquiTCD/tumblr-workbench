img // for missing image
  height: auto
  position: relative
  text-align: center
  max-width: 100%
  &:after
    overflow: hidden
    border: 1px dashed $grey-base
    content: "\f1c5" " 画像[" attr(alt)
    font-size: 1rem
    font-family: FontAwesome
    color: $grey-shade
    absolute: top 0 left 0
    z-index: 2
    width: 100%
    height: 100%
    background-color: $grey-tint
amp-img // follback for amp-img
  overflow: hidden
  background-color: $grey-tint
  p
    border: 1px dashed $grey-base
    color: $grey-shade
    font-size: 1rem
    &:before
      content: "\f1c5"
      font-family: FontAwesome
      margin: auto 0.5em

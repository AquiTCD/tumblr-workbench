extends /layouts/_base
//- ============================================================
block append variables
//- ============================================================
block append css
block append js
//- ============================================================
block content
  #container
    #main.autopagerize_page_element(role='main')
      | {block:TagPage}
      h2.tagged Posts tagged "{Tag}"
      |       {/block:TagPage}
      // 投稿
      | {block:Posts}
      article.post(class='{TagsAsClasses} {PostType}')
        | {block:Date}
        .date
          a(href='{Permalink}') {Year}-{MonthNumberWithZero}-{DayOfMonthWithZero}
        |           {/block:Date}
        // post: テキスト
        | {block:Text}
        header.entry-header
          | {block:Title}
          h1.entry-title
            a(href='{Permalink}') {Title}
          |               {/block:Title}
        .entry-content
          | {Body}
        |           {/block:Text}
        // post: 画像
        | {block:Photo}
        .entry-content
          | {LinkOpenTag}
          img(src='{PhotoURL-HighRes}', alt='{PhotoAlt}')
          |               {LinkCloseTag}
          |               {block:Caption}
          .caption
            | {Caption}
          |               {/block:Caption}
        |           {/block:Photo}
        // post: フォトセット
        | {block:Photoset}
        .entry-content
          | {Photoset-700}
          | {block:Caption}
          .caption
            | {Caption}
          |                 {/block:Caption}
        |           {/block:Photoset}
        // post: 引用
        | {block:Quote}
        .entry-content(class='{Length}')
          blockquote “{Quote}”
          |               {block:Source}
          .quote-source
            | {Source}
          |               {/block:Source}
        |           {/block:Quote}
        // post: リンク
        | {block:Link}
        header.entry-header
          h1.entry-title
            a.link-url(href='{URL}', {target}='') {Name}
        .entry-content
          | {block:Description}
          .link-description {Description}
          |                 {/block:Description}
        |           {/block:Link}
        // post: チャット
        | {block:Chat}
        .entry-content
          | {block:Title}
          h1.entry-title
            a(href='{Permalink}') {Title}
          |               {/block:Title}
          ul.ul-chat
            | {block:Lines}
            li.(class='{Alt} user_{UserNumber}')
              | {block:Label}
              span.label {Label}
              |                 {/block:Label}
              |                 {Line}
            |                 {/block:Lines}
        |           {/block:Chat}
        // post: ビデオ
        | {block:Video}
        .entry-content.video-iframe
          | {Video-700}
          | {block:Caption}
          .caption
            | {Caption}
          |               {/block:Caption}
        |           {/block:Video}
        // post: オーディオ
        | {block:Audio}
        .entry-content
          | {AudioPlayerBlack}
          | {block:Caption}
          .caption
            | {Caption}
          |               {/block:Caption}
        |           {/block:Audio}
        // post: Answer
        | {block:Answer}
        .entry-content
          .question.bubble
            | {Question}
          .asker-group
            img(src='{AskerPortraitURL-24}', width='24', height='24')
            |  {Asker}
          .answer.cont {Answer}
        |           {/block:Answer}
        // Content Source
        | {block:ContentSource}
        .content-source
          a(href='{SourceURL}')
            | {lang:Source}:
            | {block:SourceLogo}
            img(src='{BlackLogoURL}', width='{LogoWidth}', height='{LogoHeight}', alt='{SourceTitle}')
            |                 {/block:SourceLogo}
            |                 {block:NoSourceLogo}
            |                     {SourceTitle}
            |                 {/block:NoSourceLogo}
        |           {/block:ContentSource}
        // 記事フッタ
        footer.entry-footer
          | {block:RebloggedFrom}
          .rebloggedfrom
            span.meta-elements.reblog-parent-name
              | Reblogged from
              a(href='{ReblogParentURL}')
                img.favicon(src='{ReblogParentPortraitURL-16}')
                |  {ReblogParentName}
            span.meta-elements.reblog-root-name
              | Originally posted by
              a(href='{ReblogRootURL}')
                img.favicon(src='{ReblogRootPortraitURL-16}')
                |  {ReblogRootName}
          |             {/block:RebloggedFrom}
          .meta.meta-footer
            span.meta-elements.timeago
              a(href='{Permalink}') {TimeAgo}
            |               {block:NoteCount}
            span.meta-elements.notecount
              a(href='{Permalink}') {NoteCount} Notes
            |               {/block:NoteCount}
            |               {block:HasTags}
            span.meta-elements.hastags
              | {block:Tags}
              a(href='{TagURL}') #{Tag}
              |                   {/block:Tags}
            |               {/block:HasTags}
          |             {block:Date}
          .tumblr-controls
            ul.like-and-reblog-buttons
              li {ReblogButton}
              li {LikeButton}
          |             {/block:Date}
          // パーマリンクだけソーシャルボタン出す
          | {block:PermalinkPage}
          ul.social-buttons
            | {block:IfEnableTweetButton}
            li.social-button
              a.twitter-share-button(href='https://twitter.com/share', data-lang='ja') ツイート
              script.
                !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");
            |                 {/block:IfEnableTweetButton}
            |                 {block:IfEnableLikeButton}
            li.social-button
              .fb-like(data-send='false', data-layout='button_count', data-width='100', data-show-faces='false')
            |                 {/block:IfEnableLikeButton}
            |                 {block:IfEnablePlus1Button}
            li.social-button
              .g-plusone(data-size='medium')
              script(type='text/javascript').
                window.___gcfg = {lang: 'ja'};
                (function() {
                var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
                po.src = 'https://apis.google.com/js/plusone.js';
                var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
                })();
            |                 {/block:IfEnablePlus1Button}
          |             {/block:PermalinkPage}
          |             {block:PostNotes}
          h3.notecount-header {NoteCount} Notes
          .notecontainer {PostNotes}
          |             {/block:PostNotes}
      |       {/block:Posts}
    // パーマリンクのページャ
    | {block:PermalinkPagination}
    .pagenation.pagenation-permalink
      | {block:NextPost}
      a.next(href='{NextPost}', rel='next') Newer Post
      |         {/block:NextPost}
      |         {block:PreviousPost}
      a(href='{PreviousPost}') Older Post
      |         {/block:PreviousPost}
    |     {/block:PermalinkPagination}
    // ページごとのページャ
    | {block:Pagination}
    .pagenation.pagenation-index
      | {block:PreviousPage}
      a(href='{PreviousPage}') Prev
      |         {/block:PreviousPage}
      |         {block:JumpPagination length="5"}
      |           {block:CurrentPage}
      span.current-page {PageNumber}
      | {/block:CurrentPage}
      |           {block:JumpPage}
      a.jump-page(href='{URL}') {PageNumber}
      | {/block:JumpPage}
      |         {/block:JumpPagination}
      |         {block:NextPage}
      a.next(href='{NextPage}', rel='next') Next
      |         {/block:NextPage}
    |     {/block:Pagination}

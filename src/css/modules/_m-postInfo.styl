.m-postInfo
  display: flex
  flex-flow: row nowrap
  justify-content: flex-start
  align-items: center
  rhythmical-margin: 0 0.125 0 0.125
  +media-query(media-medium)
    rhythmical-margin: 0 0.25 0 0.25
  // TODO: スマホの場合は二行に
  .m-postInfo_tags
    margin-right: auto
    & > *
      margin-right: 0.5rem
    .m-postInfo_tag
      &:before
        content: '#'
  .m-postInfo_date
    align-self: stretch
    white-space: nowrap

extends /layouts/_base
//- ============================================================
block append variables
  //- Required
  - var pageTitle= "modal"
  //- Optional
  - var pageDescription= ""
  - var pageLang= ""
  - var pageOgpImage= ""
  - var pageOgpType= ""
  //- Not modified
  - var pageUrl= "/modal.html"
//- ============================================================
block append css
  link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css")
  link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap-theme.min.css")
block append js
//- ============================================================
block content
  main.l-main.break-js
    #container.l-main_container
      ul#modal-thumb
        li: a(href="img/photo-01.jpg" data-index="0")
          img(src="img/photo-01.jpg" alt="")
        li: a(href="img/photo-02.jpg" data-index="1")
          img(src="img/photo-02.jpg" alt="")
        li: a(href="img/photo-03.jpg" data-index="2")
          img(src="img/photo-03.jpg" alt="")
      button(type="button" id="more-btn" class="btn btn-primary") もっと見る
    #modal
      #modal-conteiner
        #modal-contents
        #modal-close
          span.glyphicon.glyphicon-remove(aria-hidden='true')
        #modal-prev
          span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
        #modal-next
          span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
    #modal-overlay

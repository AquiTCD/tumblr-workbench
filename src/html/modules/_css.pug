block css
  if useCDN
    link(rel="stylesheet" href=`${settings.cdn.highlight.css}`)
    link(rel="stylesheet" href=`${settings.cdn.yakuhan.css}`)
    link(rel="stylesheet" href=`${settings.cdn.fontawesome.css}`)
  //- amp
  if isAmp
    script(async src='https://cdn.ampproject.org/v0.js')
    script(async custom-element="amp-social-share" src="https://cdn.ampproject.org/v0/amp-social-share-0.1.js")
    script(async custom-element="amp-analytics" src="https://cdn.ampproject.org/v0/amp-analytics-0.1.js")
    <style amp-boilerplate>body{-webkit-animation:-amp-start 8s steps(1,end) 0s 1 normal both;-moz-animation:-amp-start 8s steps(1,end) 0s 1 normal both;-ms-animation:-amp-start 8s steps(1,end) 0s 1 normal both;animation:-amp-start 8s steps(1,end) 0s 1 normal both}@-webkit-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@-moz-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@-ms-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@-o-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}</style><noscript><style amp-boilerplate>body{-webkit-animation:none;-moz-animation:none;-ms-animation:none;animation:none}</style></noscript>
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat|Noto+Sans")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css")
    if !isProduction
      link(rel="stylesheet" href="/css/style.css")
      style
        = t.CustomCSS
    else
      style(amp-custom)
        | @@include('css/style.css')
        = t.CustomCSS
  else
    link(rel="stylesheet" href="/css/style.css")
    style
      = t.CustomCSS
